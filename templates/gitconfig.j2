[user]
	name = {{ USER }}
	email = {{ USER_EMAIL }}

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p

[diff]
  tool = meld
[difftool "meld"]

[merge]
  tool = meld
[mergetool "meld"]
  keepBackup = false
